<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/dialogWrap"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:background="@drawable/item_white"
        android:orientation="vertical"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.109">

        <TextView
            android:id="@+id/helpTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:gravity="center"
            android:text="도움말"
            android:textAlignment="center"
            android:textAppearance="@style/H3"
            android:textSize="25sp" />

        <TextView
            android:id="@+id/helpText"
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:layout_margin="8dp"
            android:layout_marginTop="16dp"
            android:padding="8dp"
            android:text="@string/noti_assistant_help" />

        <Button
            android:id="@+id/btnShutdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/item_lightgray"
            android:onClick="shutDownClick"
            android:text="닫기"
            android:textAppearance="@style/H4" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
